<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="50dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="80dp"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/all"
        android:layout_width="160dp"
        android:layout_height="290dp"
        android:layout_gravity="top|left"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/all_button"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#00FFF4F4"
            android:src="@drawable/all" />

        <TextView
            android:id="@+id/all_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="All Restaurants"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/style"
        android:layout_width="160dp"
        android:layout_height="290dp"
        android:layout_gravity="top|right"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/style_button"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/style" />

        <TextView
            android:id="@+id/style_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Style"
            android:textAlignment="center"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/food"
        android:layout_width="160dp"
        android:layout_height="290dp"
        android:layout_gravity="bottom|left"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/food_button"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/style" />

        <TextView
            android:id="@+id/food_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Food"
            android:textAlignment="center"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/random"
        android:layout_width="160dp"
        android:layout_height="290dp"
        android:layout_gravity="bottom|right"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/random_button"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/random" />

        <TextView
            android:id="@+id/random_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Lucky Draw"
            android:textAlignment="center"
            android:textSize="22dp" />

    </LinearLayout>
</FrameLayout>
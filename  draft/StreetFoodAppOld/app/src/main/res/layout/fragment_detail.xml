<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <ImageView
        android:id="@+id/subindPic_imageView"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="30dp"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="fill"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="160dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Name of rest"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/subsubind_textView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:gravity="fill"
            android:paddingLeft="20dp"
            android:text="Style (Asian)" />

        <TextView
            android:id="@+id/phone_textView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:autoLink="phone"
            android:gravity="fill"
            android:paddingLeft="20dp"
            android:text="Phone number" />

        <TextView
            android:id="@+id/website_textView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:autoLink="web"
            android:gravity="fill"
            android:paddingLeft="20dp"
            android:text="Website" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_textView"
                android:layout_width="319dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:text="Address Street" />

            <TextView
                android:id="@+id/postcode_textView"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="fill"
                android:text="Postcode" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</FrameLayout>